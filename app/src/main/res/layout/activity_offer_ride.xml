<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.ufrgscaronas.OfferRide"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <RelativeLayout
        android:layout_width="380dp"
        android:layout_height="509dp"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="1dp">

        <RelativeLayout
            android:layout_width="368dp"
            android:layout_height="64dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="28dp"
            android:id="@+id/relativeLayout"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:layout_marginStart="14dp"
                app:srcCompat="@mipmap/uc_launcher" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@+id/imageView4"
                android:layout_toRightOf="@+id/imageView4"
                android:layout_weight="1"
                android:text="Informe seus dados abaixo (Obrigatórios *) "
                android:textColor="#F00"
                android:textSize="18dp"
                android:textStyle="bold" />

        </RelativeLayout>


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="366dp"
            android:layout_height="410dp"
            android:layout_alignLeft="@+id/relativeLayout"
            android:layout_alignStart="@+id/relativeLayout"
            android:layout_below="@+id/relativeLayout"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="120dp">

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Seus dados pessoais:"
                android:textSize="16dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/name_complete"
                android:layout_width="342dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Nome Completo *"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/driver_email"
                android:layout_width="342dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Email *"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/driver_age"
                android:layout_width="342dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Idade *"
                android:inputType="number" />

            <EditText
                android:id="@+id/driver_phone"
                android:layout_width="342dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Telefone *"
                android:inputType="phone" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dados sobre o seu veículo:"
                android:textSize="16dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/driver_model_car"
                android:layout_width="342dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Modelo do Carro *"
                android:inputType="text" />

            <EditText
                android:id="@+id/driver_model_color"
                android:layout_width="342dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Cor do seu veículo *"
                android:inputType="text" />

            <EditText
                android:id="@+id/driver_license_plate"
                android:layout_width="342dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Placa do seu veículo *"
                android:inputType="text" />

            <Button
                android:id="@+id/button2"
                style="@android:style/Widget.Holo.Button"
                android:layout_width="342dp"
                android:layout_height="wrap_content"
                android:onClick="makeDriverRegister"
                android:text="Enviar Dados" />

        </LinearLayout>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
