<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.ufrgscaronas.MainProgram"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">



        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <RelativeLayout
            android:layout_width="366dp"
            android:layout_height="491dp"
            tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="8dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="101dp"
            android:layout_height="107dp"
            app:srcCompat="@mipmap/uc_launcher"
            tools:layout_editor_absoluteY="16dp"
            tools:layout_editor_absoluteX="30dp"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/MainHeaderText"
            android:layout_width="202dp"
            android:layout_height="67dp"
            android:text="Seja Bem Vindo ao UFRGS Caronas!"
            android:textStyle="bold"
            android:textSize="22dp"
            android:textColor="#F00"
            tools:layout_editor_absoluteX="150dp"
            tools:layout_editor_absoluteY="29dp"
            android:layout_alignBottom="@+id/imageView"
            android:layout_alignRight="@+id/MainDescription"
            android:layout_alignEnd="@+id/MainDescription"
            android:layout_marginBottom="13dp" />


        <TextView
            android:id="@+id/MainDescription"
            android:layout_width="308dp"
            android:layout_height="79dp"
            android:text="Desejando chegar ou se deslocar de um campus a outro da UFRGS? Ofereça ou procure caronas e garanta uma experiência única com o UFRGS Caronas! Aproveite!"
            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="150dp"
            android:layout_marginBottom="24dp"
            android:layout_above="@+id/chooseOption"
            android:layout_centerHorizontal="true" />


        <TextView
            android:id="@+id/chooseOption"
            android:layout_width="257dp"
            android:layout_height="35dp"
            android:text="Selecione a opção desejada:"
            android:textSize="18dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="56dp"
            tools:layout_editor_absoluteY="271dp"
            android:layout_above="@+id/giveRide"
            android:layout_alignLeft="@+id/giveRide"
            android:layout_alignStart="@+id/giveRide" />


        <Button
            android:id="@+id/giveRide"
            android:layout_width="257dp"
            android:layout_height="72dp"
            android:layout_above="@+id/takeRide"
            android:layout_alignLeft="@+id/takeRide"
            android:layout_alignStart="@+id/takeRide"
            android:layout_marginBottom="29dp"
            android:background="@color/cyan_400"
            android:onClick="goToOfferARide"
            android:text="Oferecer Carona"
            tools:layout_editor_absoluteX="56dp"
            tools:layout_editor_absoluteY="306dp" />


        <Button
            android:id="@+id/takeRide"
            android:layout_width="257dp"
            android:layout_height="72dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="28dp"
            android:background="@color/cyan_400"
            android:onClick="goToSearchRide"
            android:text="Procurar Carona"
            tools:layout_editor_absoluteX="56dp"
            tools:layout_editor_absoluteY="389dp" />

        </RelativeLayout>


</android.support.constraint.ConstraintLayout>
