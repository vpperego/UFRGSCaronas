<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:background="@color/cyan_50"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <TextView
        android:id="@+id/travelTime"
        android:layout_width="80dp"
        android:layout_height="54dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="teste"
        android:textAlignment="center"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="1dp" />

    <TextView
        android:id="@+id/carColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="TextView"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="238dp"
        tools:layout_editor_absoluteY="4dp"
        android:layout_below="@+id/carName"
        android:layout_alignLeft="@+id/carName"
        android:layout_alignStart="@+id/carName" />

    <TextView
        android:id="@+id/riderName"
        android:layout_width="138dp"
        android:layout_height="51dp"
        android:layout_weight="1"
        android:text="TextView"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="4dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/travelTime"
        android:layout_toEndOf="@+id/travelTime"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp" />

    <TextView
        android:id="@+id/carName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.41"
        android:text="TextView"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="238dp"
        tools:layout_editor_absoluteY="21dp"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/riderName"
        android:layout_toEndOf="@+id/riderName" />

</RelativeLayout>