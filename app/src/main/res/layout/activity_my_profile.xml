<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cyan_50"
    tools:context="com.example.user.ufrgscaronas.MyProfile">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="11dp">

        <TextView
            android:id="@+id/profile_age_id"
            android:layout_width="245dp"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/textView17"
            android:layout_alignBottom="@+id/textView17"
            android:layout_toEndOf="@+id/textNameUserView_Profile"
            android:layout_toRightOf="@+id/textNameUserView_Profile" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="245dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/textNameUserView_Profile"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:layout_toEndOf="@+id/textNameUserView_Profile"
            android:layout_toRightOf="@+id/textNameUserView_Profile" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="27dp"
            android:layout_marginStart="27dp"
            android:layout_marginTop="33dp"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/myProfile_txtv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView9"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="39dp"
            android:layout_marginStart="39dp"
            android:layout_toEndOf="@+id/imageView9"
            android:layout_toRightOf="@+id/imageView9"
            android:text="UFRGS Caronas \n     Meu Perfil"
            android:textColor="#F00"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textNameUserView_Profile"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="86dp"
            android:text="Nome: "
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_below="@+id/imageView9"
            android:layout_alignLeft="@+id/imageView9"
            android:layout_alignStart="@+id/imageView9" />

        <TextView
            android:id="@+id/profile_name_id"
            android:layout_width="245dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/textNameUserView_Profile"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:layout_toEndOf="@+id/textNameUserView_Profile"
            android:layout_toRightOf="@+id/textNameUserView_Profile" />

        <TextView
            android:id="@+id/textEmailUserView_Profile"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Seu Email:"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_below="@+id/textView18"
            android:layout_alignLeft="@+id/textNameUserView_Profile"
            android:layout_alignStart="@+id/textNameUserView_Profile" />

        <TextView
            android:id="@+id/email_profile_id"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/textEmailUserView_Profile"
            android:layout_alignRight="@+id/textView18"
            android:layout_alignEnd="@+id/textView18" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Idade:"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_below="@+id/email_profile_id"
            android:layout_alignLeft="@+id/textEmailUserView_Profile"
            android:layout_alignStart="@+id/textEmailUserView_Profile" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
