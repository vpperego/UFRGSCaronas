<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cyan_50"
    tools:context="com.example.user.ufrgscaronas.OfferRide3">

    <RelativeLayout
        android:layout_width="379dp"
        android:layout_height="509dp"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="1dp">

        <RelativeLayout
            android:layout_width="366dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <Button
                android:id="@+id/button2"
                style="@android:style/Widget.Holo.Button"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@color/orange_700"
                android:onClick="finalizeDriverRegister"
                android:text="Finalizar" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="368dp"
            android:layout_height="130dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="33dp"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/linearLayout2"
            android:layout_alignEnd="@+id/linearLayout2">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="103dp"
                android:layout_marginStart="103dp"
                android:layout_weight="1"
                android:text="Dados sobre sua Carona (Obrigatórios *)"
                android:textColor="#F00"
                android:textSize="20dp"
                android:textStyle="bold" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="366dp"
            android:layout_height="340dp"
            android:layout_below="@+id/imageView5"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:weightSum="1"
            tools:layout_editor_absoluteX="9dp"
            tools:layout_editor_absoluteY="105dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Qual será seu local de partida? *"
                android:textSize="16dp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner_Partida_Info"
                android:layout_width="342dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Qual será seu local de Chegada? *"
                android:textSize="16dp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner_chegada_info"
                android:layout_width="342dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Informe o máximo de passageiros *"
                android:textSize="16dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/passangers_max"
                android:layout_width="342dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Número Máximo"
                android:inputType="number" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Data (DD/MM/AAAA) *"
                android:textSize="16dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/date_departure"
                android:layout_width="342dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Informe a data"
                android:inputType="date" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hora de Partida (HH:MM) *"
                android:textSize="16dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/hour_departure"
                android:layout_width="342dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Informe o horário"
                android:inputType="time" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/relativeLayout2"
            android:layout_alignStart="@+id/relativeLayout2"
            android:layout_marginLeft="19dp"
            android:layout_marginStart="19dp"
            app:srcCompat="@drawable/img_logo" />


    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
